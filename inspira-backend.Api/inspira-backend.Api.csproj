    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>inspira_backend.API</RootNamespace>
    <UserSecretsId>cb9ea04b-da66-4704-b671-19754bed15ae</UserSecretsId>
